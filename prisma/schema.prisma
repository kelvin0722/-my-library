// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Collection {
  WANT_TO_READ
  READING
  READ
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  email     String  @unique
  firstName String?
  lastName  String?
  password  String
  books     Book[]
}

model Book {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  title      String
  author     String
  coverImage String?
  collection Collection?
  rating     Int?
  userId     Int
  user       User       @relation(fields: [userId], references: [id])
}
